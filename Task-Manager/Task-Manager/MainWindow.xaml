<Window x:Class="Task_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_Manager"
        xmlns:views="clr-namespace:Task_Manager.Views"
        xmlns:viewModels="Task"
        mc:Ignorable="d"
        Title="Task Manager" Height="800" Width="1400">
    <Window.Resources>
    </Window.Resources>

    <Grid x:Name="layoutGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="0.5"/>
        <Border Grid.Column="2" BorderBrush="Black" BorderThickness="0.5"/>
        <GridSplitter Grid.Column="1" Width="3" Background="Gray"
                  VerticalAlignment="Stretch" HorizontalAlignment="Center" />



        <views:ProcessListView x:Name="processList" DataContext="{Binding ProcessListViewModel}" Grid.Column="0"/>
        <views:ProcessDetailsView x:Name="processDetails" DataContext="{Binding ProcessDetailsViewModel}"  Grid.Column="2"/>

    </Grid>
</Window>
